{
    "manifest_version": 3,
    "name": "SiteNotes",
    "version": "0.0.4",
    "action": {
      "default_popup": "index.html",
      "default_icon": "icons/placeholder.png"
    },
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "web_accessible_resources": [
      {
        "resources": ["manage-notes.html", "assets/contentScript.js", "assets/contentScriptNote.js",
        "toolbar-icons/*", "toolbar.css", "note.css", "note-icons/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/contentScript.js", "assets/contentScriptNote.js"]
    }
    ]
  }
  